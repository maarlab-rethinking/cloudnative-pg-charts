        },
        "registry": {
          "default": "ghcr.io",
          "title": "registry",
          "type": "string"
        },
        "repository": {
          "default": "cloudnative-pg/plugin-barman-cloud",
          "title": "repository",
          "type": "string"
        },
        "tag": {
          "default": "",
          "description": "Overrides the image tag whose default is the chart appVersion.",
          "title": "tag",
          "type": "string"
        }
      },
      "required": [
        "registry",
        "repository",
        "pullPolicy",
        "tag"
