    "serviceAccount": {
      "properties": {
        "create": {
          "default": true,
          "description": "Specifies whether the service account should be created.",
          "title": "create",
          "type": "boolean"
        },
        "name": {
          "default": "",
          "description": "The name of the service account to use.\nIf not set and create is true, a name is generated using the fullname template.",
          "title": "name",
          "type": "string"
        }
      },
